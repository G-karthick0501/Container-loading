generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum JobStatus { 
  DRAFT
  READY
  RUNNING
  COMPLETE
  FAILED
}

model User {
  id         String   @id @default(uuid())
  email      String   @unique
  password   String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  
  jobs       Job[]
}

model Job {
  id         String    @id @default(uuid())
  name       String
  status     JobStatus @default(DRAFT)
  
  userId     String
  user       User      @relation(fields: [userId], references: [id])
  
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  items      Item[]

   containerId     String?
  container       Container?  @relation(fields: [containerId], references: [id])
  
  // NEW: Custom container dimensions (when not using preset)
  customLength    Float?
  customWidth     Float?
  customHeight    Float?
  customMaxWeight Float?
  
  // NEW: Constraints
  allowRotation   Boolean @default(true)
}

model Item {
  id         String   @id @default(uuid())
  name       String
  length     Float
  width      Float
  height     Float
  weight     Float
  quantity   Int      @default(1)
  
  jobId      String
  job        Job      @relation(fields: [jobId], references: [id])
  
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}


model Container {
  id          String   @id @default(uuid())
  name        String   // "40ft Standard"
  code        String   @unique // "40ST"
  length      Float    // internal dimensions in mm
  width       Float
  height      Float
  maxWeight   Float    // kg
  volume      Float    // mÂ³ (pre-calculated for convenience)
  description String?
  
  createdAt   DateTime @default(now())
  
  // Relation - jobs can reference this container
  jobs        Job[]
}